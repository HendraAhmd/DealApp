<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailsActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/r30"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/product_image_details"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:id="@+id/l1"
                android:layout_below="@+id/product_image_details"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="24dp"
                android:paddingTop="30dp">

                <TextView
                    android:id="@+id/product_name_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mregular"
                    android:textStyle="bold"
                    android:hint="Product Name"
                    android:textColor="@color/blackPrimary"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/product_price_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mregular"
                    android:layout_marginTop="4dp"
                    android:textStyle="bold"
                    android:layout_gravity="end"
                    android:hint="Price"
                    android:textColor="@color/pinkAccent"
                    android:textSize="24sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:background="#ededed"/>

                <LinearLayout
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_description"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:background="@color/deepPurple"/>

                    <LinearLayout
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="6dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mregular"
                            android:textStyle="bold"
                            android:text="Deskripsi"
                            android:textColor="@color/blackPrimary"
                            android:textSize="18sp"/>

                        <TextView
                            android:id="@+id/product_description_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mregular"
                            android:layout_marginTop="4dp"
                            android:hint="this is description"
                            android:textColor="@color/blackPrimary"
                            android:textSize="16sp"/>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_store"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:background="@color/pinkAccent"/>

                    <LinearLayout
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="6dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mregular"
                            android:textStyle="bold"
                            android:text="Nama Toko"
                            android:textColor="@color/blackPrimary"
                            android:textSize="18sp"/>

                        <TextView
                            android:id="@+id/product_store_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mregular"
                            android:layout_marginTop="4dp"
                            android:hint="this is store name"
                            android:textColor="@color/blackPrimary"
                            android:textSize="16sp"/>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_local_phone"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:background="@drawable/circlebggreen"/>

                    <LinearLayout
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="6dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mregular"
                            android:textStyle="bold"
                            android:text="Kontak whatsApp"
                            android:textColor="@color/blackPrimary"
                            android:textSize="18sp"/>

                        <TextView
                            android:id="@+id/product_contact_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mregular"
                            android:layout_marginTop="4dp"
                            android:hint="this is WA number"
                            android:textColor="@color/blackPrimary"
                            android:textSize="16sp"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mregular"
                    android:lineSpacingExtra="8dp"
                    android:text="Pihak Deal tidak bertanggungjawab atas transaksi yang akan anda lakukan. Bijaklah dalam bertransaksi!"
                    android:textColor="@color/blackPrimary"
                    android:textSize="14sp"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/l1">

                <Button
                    android:id="@+id/wa_btn"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:fontFamily="@font/mregular"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/orange_buttons"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Hubungi Penjual"
                    android:textColor="@android:color/white"
                    />

                <ImageView

                    android:id="@+id/back_list_btn"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:background="#fff"
                    android:src="@drawable/ic_arrow"
                    android:padding="10dp"
                    />


            </RelativeLayout>

        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>

</RelativeLayout>