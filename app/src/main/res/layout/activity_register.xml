<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".RegisterActivity">
    
    <TextView
        android:id="@+id/join_now_create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="Buat Akun Baru"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/mregular"
        />

    <TextView
        android:id="@+id/info_forms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/join_now_create_account"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="9dp"
        android:textAlignment="center"
        android:text="Silahkan isi form informasi \ndi bawah ini"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/mlight"
        />

    <LinearLayout
        android:id="@+id/linear_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_layout_white"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:layout_below="@id/info_forms"
        android:layout_marginTop="32dp"
        >

        <LinearLayout
            android:layout_marginBottom="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/mlight"
                android:text="Username"
                android:textColor="@color/graySecondary"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/register_username_input"
                android:fontFamily="@font/mlight"
                android:inputType="text"
                android:textColor="@color/blackPrimary"
                android:paddingLeft="12dp"
                android:lines="1"
                android:background="@drawable/bg_input_edit"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/mlight"
                android:text="Password"
                android:textColor="@color/graySecondary"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/register_password_input"
                android:fontFamily="@font/mlight"
                android:inputType="textPassword"
                android:textColor="@color/blackPrimary"
                android:paddingLeft="12dp"
                android:lines="1"
                android:background="@drawable/bg_input_edit"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/mlight"
                android:text="WhatsApp Number"
                android:textColor="@color/graySecondary"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/register_phone_input"
                android:fontFamily="@font/mlight"
                android:inputType="number"
                android:textColor="@color/blackPrimary"
                android:paddingLeft="12dp"
                android:lines="1"
                android:background="@drawable/bg_input_edit"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/register_btn"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_below="@+id/linear_layout2"
        android:fontFamily="@font/mregular"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/orange_buttons"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="JOIN"
        android:textColor="@android:color/white"
        />

    <ImageView
        android:id="@+id/back_btn_tostart"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_below="@+id/linear_layout2"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="50dp"
        android:background="#fff"
        android:src="@drawable/ic_arrow"
        android:padding="10dp"
        />

</RelativeLayout>