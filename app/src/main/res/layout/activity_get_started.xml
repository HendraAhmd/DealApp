<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/get_started"
    tools:context=".GetStartedActivity">

    <ImageView
        android:id="@+id/deal_logo_orange"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:src="@drawable/deal_logo_orange"/>

    <TextView
        android:id="@+id/or_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR SKIP"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/main_login_btn"
        android:layout_marginBottom="8dp"
        />

    <Button
        android:id="@+id/main_login_btn"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:fontFamily="@font/mregular"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="55dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/orange_buttons"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="LOGIN"
        android:textColor="@android:color/white"
        />

    <Button
        android:id="@+id/main_join_now_btn"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:fontFamily="@font/mregular"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_above="@+id/main_login_btn"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/buttons"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:text="JOIN NOW"
        android:textStyle="bold"
        android:textColor="@color/orangePrimary"
        />



</RelativeLayout>